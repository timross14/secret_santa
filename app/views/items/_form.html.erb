    <%= form.text_field :text, id: :item_text %>
  </div>

  <div class="field">
    <%= form.label :intend_to_purchase %>
    <%= form.check_box :intend_to_purchase, id: :item_intend_to_purchase %>
  </div>

  <div class="field">
    <%= form.label :purchased %>
    <%= form.check_box :purchased, id: :item_purchased %>
  </div>

